<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:rich="sap.ui.richtexteditor">
    
    <Dialog id="richTextDialog"
        title="Innvoice"
        stretch="false"
        contentWidth="900px"
        contentHeight="800px"
        draggable="true"
        resizable="true">
        
        <rich:RichTextEditor id="rteEditor"
            width="900px"
            height="620px"
            editable="false"
            value="Enter your text here..."
            
             />

        <beginButton>
            <Button text="Share" press="onShareInnvoice" type="Accept"/>
        </beginButton>
        
        <endButton>
            <Button text="Close" press="onCloseInnvoice" type="Reject"/>
        </endButton>
        
    </Dialog>
    
</core:FragmentDefinition>
