<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
    <Dialog
        id="customerFormDialog"
        title="Create Customer"
        class="sapUiResponsiveContentPadding"
    >
        <content>
            <l:VerticalLayout width="100%">
                <Label text="Name" />
                <Input
                    id="nameInput"
                    value="{nCustomer>/NAME}"
                    placeholder="Enter name"
                    width="100%"
                    class="sapUiSmallMarginBottom"
                />

                <Label text="Email" />
                <Input
                    id="emailInput"
                    value="{nCustomer>/EMAIL}"
                    placeholder="Enter email"
                    type="Email"
                    width="100%"
                    class="sapUiSmallMarginBottom"
                />

                <Label text="Phone" />
                <Input
                    id="phoneInput"
                    value="{nCustomer>/PHONE}"
                    placeholder="Enter phone number"
                    type="Number"
                    width="100%"
                    maxLength="10"
                    class="sapUiSmallMarginBottom"
                />

                <Label text="Address" />
                <Input
                    id="addressInput"
                    value="{nCustomer>/ADDRESS}"
                    placeholder="Enter address"
                    width="100%"
                    class="sapUiSmallMarginBottom"
                />

                <Label text="Gender" />
                <RadioButtonGroup
                    id="rbg3"
                    columns="5"
                    class="sapUiSmallMarginBottom"
                    select="onGenderSelect"
                    
                >
                    <RadioButton
                        id="RB3-1"
                        text="Male"
                        selected="false"
                        
                    />
                    <RadioButton
                        id="RB3-2"
                        text="Female"
                    />
                    <RadioButton
                        id="RB3-3"
                        text="Other"
                    />
                </RadioButtonGroup>

                <Label text="Type" />
                <Input
                    id="typeInput"
                    value="{nCustomer>/TYPE}"
                    placeholder="Enter customer type"
                    width="100%"
                    class="sapUiSmallMarginBottom"
                />
            </l:VerticalLayout>
        </content>
        <beginButton>
            <Button
                text="Submit"
                type="Emphasized"
                press="onSubmitCustomer"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCloseDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
